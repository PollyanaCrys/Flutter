import 'package:flutter/material.dart';
import '/infoProdutos.dart';

class DetalhesCatalogo extends StatefulWidget {
  final catalogo infoProdutos;

const DetalhesCatalogo ({Key? key, required this.catalogoTuristico})
      : super(key: key);


    override
  Widget build(BuildContext context) {
    return Scaffold(
      body: buildBody(),
    );
  }

  buildBody() {
    return ListView(
      children: [
        Image.network(catalogo.imagem),
        Padding(
          padding: const EdgeInsets.all(16.0),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text(
                catalogo.titulo,
              ),
              const SizedBox(height: 8),
              buildText(text: catalogo.titulo, fontSize: 21, isBold: true),
              const SizedBox(height: 8),
              buildText(text: catalogo.valor),
              const SizedBox(height: 8),
              buildText(text: '${catalogo.quantidade}'),
              const SizedBox(height: 8),

              Row(
                children: [
                  Expanded(
                    child: buildText(
                      text: catalogo.descricao,
                      fontSize: 21,
                      isBold: true,
                    ),
                  ),
                ],
              ),
            ],
          ),
        ),
      ],
    );
  }
